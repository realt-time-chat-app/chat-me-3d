{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./src"
    ],
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@/components:": ["/components"],
    },
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
//    "types": ["node", "vite/client", "react", "react-dom", "jest", "vitest", "vitest/globals"],
    "types": ["node", "vite/client", "react", "react-dom", "vitest", "vitest/globals", "@react-three/fiber"]
  },
  "include": [
    "src",
    "vite.config.ts"
  ]
}
